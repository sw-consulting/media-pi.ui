{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against Vite",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start-vite",
      "runtimeArgs": [
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/chrome"
      ]
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Dev: Vite + Chrome",
      "configurations": ["Launch Chrome against Vite"]
    }
  ]
}
{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Vite App",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "preLaunchTask": "start-vite"
    }
  ]
}
